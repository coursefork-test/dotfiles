#!/bin/sh

# Originally defined as a function in bashrc, but that was giving me problems (heaven knows why) so I moved it out to a script.

if type -P ack &>/dev/null ; then # Use ack for grepping and find if ack is available
    ack $@ --color-match=green --color-filename=blue --smart-case 
else 
    grep -Ri --exclude=*.svn* $1 $@
fi 
